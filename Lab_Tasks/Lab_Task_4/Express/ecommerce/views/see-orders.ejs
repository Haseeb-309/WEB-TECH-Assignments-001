<!DOCTYPE html>
<html>
<head>
  <title>Manage Orders</title>
  <style>
    table {
      width: 100%;
      border-collapse: collapse;
    }
    th, td {
      border: 1px solid #aaa;
      padding: 8px;
      text-align: left;
    }
  </style>
</head>
<body>
  <h1>All Orders</h1>

  <% if (orders.length === 0) { %>
    <p>No orders found.</p>
  <% } else { %>
    <table>
      <thead>
        <tr>
          <th>Email</th>
          <th>Address</th>
          <th>Items</th>
          <th>Total Cost</th>
          <th>Created At</th>
        </tr>
      </thead>
      <tbody>
        <% orders.forEach(order => { %>
          <tr>
            <td><%= order.email %></td>
            <td><%= order.address %></td>
            <td>
              <ul>
                <% order.items.forEach(item => { %>
                  <li><%= item.title %> (Qty: <%= item.quantity %>, Price: <%= item.price %>)</li>
                <% }) %>
              </ul>
            </td>
            <td>$<%= order.totalCost.toFixed(2) %></td>
            <td><%= new Date(order.createdAt).toLocaleString() %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>

</body>
</html>
