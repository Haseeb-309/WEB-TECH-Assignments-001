<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>My Cart</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 40px;
      color: #000;
      margin: 0;
    }

    h1 {
      font-size: 28px;
      margin-bottom: 20px;
      margin-top: 130px;
    }

    .cart-header {
      display: flex;
      justify-content: space-between;
      font-weight: bold;
      border-bottom: 2px solid #000;
      padding-bottom: 10px;
      margin-bottom: 20px;
    }

    .cart-item {
      display: flex;
      align-items: center;
      justify-content: space-between;
      border-bottom: 1px solid #ddd;
      padding: 20px 0;
    }

    .item-info {
      flex: 1;
    }

    .item-title {
      font-weight: bold;
      font-size: 18px;
    }

    .item-subtext {
      color: #ff6600;
      font-weight: bold;
    }

    .item-price {
      width: 100px;
      text-align: right;
      
    }

    .quantity-form {
      display: flex;
      gap: 5px;
      align-items: center;
    }

    .quantity-form button {
      background: none;
      border: 1px solid #000;
      width: 28px;
      height: 28px;
      border-radius: 6px;
      font-size: 16px;
      font-weight: bold;
      cursor: pointer;
    }

    .quantity-form input[type="number"] {
      width: 40px;
      text-align: center;
      border: none;
      background: transparent;
    }

    .free-item {
      opacity: 0.8;
    }

    h3 {
      text-align: right;
      margin-top: 30px;
    }

    .order-button {
      text-align: right;
      margin-top: 20px;
    }

    .order-button button {
      padding: 10px 20px;
      font-weight: bold;
      font-size: 16px;
      border: none;
      background-color: #000;
      color: #fff;
      border-radius: 6px;
      cursor: pointer;
    }

    .order-button button:hover {
      background-color: #333;
    }

    /* Remove button styles */
    .remove-form {
      margin-right: 15px;
      flex-shrink: 0;
    }

    .remove-form button {
      background: none;
      border: none;
      color: red;
      font-weight: bold;
      font-size: 18px;
      cursor: pointer;
      padding: 0;
      line-height: 1;
    }
  </style>
</head>
<body>
  <h1>My Cart</h1>

  <% if (sessionCart.length === 0) { %>
    <p>Your cart is empty.</p>
  <% } else { %>
    <div class="cart-header">
      <div style="flex: 1;">Item</div>
      <div class="item-price">Price</div>
      <div>Quantity</div>
    </div>
   

    <% sessionCart.forEach(item => { %>
      <div class="cart-item <%= item.price === 0 ? 'free-item' : '' %>">
        <% if (item.price !== 0) { %>
          <form class="remove-form" action="/remove-item" method="POST">
            <input type="hidden" name="title" value="<%= item.title %>">
            <button type="submit" title="Remove Item">üóëÔ∏è</button>
          </form>
        <% } %>

        <div class="item-info">
          <div class="item-title"><%= item.title %></div>
        </div>

        <div class="item-price">$<%= item.price.toFixed(2) %></div>

        <% if (item.price === 0) { %>
          <div>0</div>
        <% } else { %>
          <form class="quantity-form" action="/update-quantity" method="POST">
            <input type="hidden" name="title" value="<%= item.title %>">
            <input type="hidden" name="quantity" value="<%= item.quantity - 1 %>">
            <button type="submit">‚àí</button>
          </form>

          <div style="width: 40px; text-align: center;"><%= item.quantity %></div>

          <form class="quantity-form" action="/update-quantity" method="POST">
            <input type="hidden" name="title" value="<%= item.title %>">
            <input type="hidden" name="quantity" value="<%= item.quantity + 1 %>">
            <button type="submit">+</button>
          </form>
        <% } %>
      </div>
    <% }) %>

    <h3>Subtotal: $<%= totalCost.toFixed(2) %></h3>

    <div class="order-button">
      <form action="/place-order" method="POST">
        <button type="submit">Place Order</button>
      </form>
    </div>
  <% } %>
</body>
</html>
